<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/Users/adityasonikanoi/Documents/GitHub/CampuConnectOfficial/UserModule/Logging/elk-stack.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure the logger for your API package -->
    <logger name="com.example.api" level="INFO">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Adjust the root logger for other parts of the application -->
    <root level="WARN">
        <appender-ref ref="FILE" />
    </root>
</configuration>
